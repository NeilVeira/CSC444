<html>
	<body>
		<h1>
			<strong><%= @golf_course.name %></strong>
		</h1>
		<br>
		<p><%= @golf_course.description %></p>
		<br>
		<%= image_tag @golf_course.image.url %>
		<br><br>		
		
		<h3>Address</h3>
		<p>
			<strong>StreetNumber:</strong><%= @golf_course.address.streetNumber %><br>
			<strong>StreetName:</strong><%= @golf_course.address.streetName %><br>
			<strong>City:</strong><%= @golf_course.address.city %><br>
			<strong>Province:</strong><%= @golf_course.address.province %><br>
			<strong>Country:</strong><%= @golf_course.address.country %><br>
			<strong>PostalCode:</strong><%= @golf_course.address.postalCode %><br>
		</p>

		<section>
			<iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/search?q=<%= @golf_course.address.streetNumber.to_s+' '+@golf_course.address.streetName+', '+@golf_course.address.city+', '+@golf_course.address.province+', '+@golf_course.address.country+', '+@golf_course.address.postalCode %>&key=AIzaSyD8a5v_F5a9FS6gYvC7NYy7vwzaU4_moiw" allowfullscreen></iframe>
		</section>
		

		<br>
		<% if user_is_golf_course_organizer?(@golf_course) %>
			<p>You are an organizer for this golf course!</p>
			<%= link_to 'Edit', edit_golf_course_path(@golf_course) %><br>
		<% else %>
			<p>
				<strong>Golf course organizer: </strong><%= @organizer.person.firstname %> <%= @organizer.person.lastname %>
				<!TODO: should we display contact information (email)?>
			</p>
		<% end %>

		<%= link_to 'Home', controller: 'home_page' %>
	</body>
</html>