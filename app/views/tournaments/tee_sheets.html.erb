<%= render partial: "tournaments/dashboard_header", locals: {is_admin: @is_admin, organizer: @organizer, tournament: params[:id]} %>
<div class="container-fluid">
	<h2>
		<strong>Tee Sheets</strong>
	</h2>
	<%@teams = @tournament.teams%>
	<%if (@teams.empty?)%>
			 The tournament does not have a team
	<%else%>
		<table class="table">
		<th>Start Time</th>
		<th>Team Number</th>
		<th>Players</th>
		
		<% i = 0 %>
		<% tee_time = @tournament.date%>
		
		<% @teams.each do |team| %>

		<tr>
			<td>
				<%tee_time = tee_time + i*60 %>
				<%= tee_time.hour %> : 
				<% if tee_time.min < 10%>
					0<%=tee_time.min%>
				<% else %>
					<%=tee_time.min%>
				<% end %>
			 	<% i = 8%>
			 </td>

			<td>
				<%= team.team_num.to_s %>
			</td>
						
			<td>
				<% if(team.p1.nil?) %>
					<%= "Nil" %> 
				<% else %>
					<%= team.p1.person.firstname + " " + team.p1.person.lastname %>
				<% end %>
			</td>

			<td>
				<% if(team.p2.nil?) %>
					<%= "Nil" %> 
				<% else %>
					<%= team.p2.person.firstname + " " + team.p2.person.lastname %>
				<% end %>
			</td>


			<td>
				<% if(team.p3.nil?) %>
					<%= "Nil" %> 
				<% else %>
					<%= team.p3.person.firstname + " " + team.p3.person.lastname %>
				<% end %>
			</td>

			<td>
				<% if(team.p4.nil?) %>
					<%= "Nil" %> 
				<% else %>
					<%= team.p4.person.firstname + " " + team.p4.person.lastname %>
				<% end %>
			</td>
						
		</tr>
		<% end %>
		</table>
	<% end %>
</div>