<html>	 
	<body>
		<section>
			<h1>
				<%= @tournament.name %>
			</h1>
			<p>
				<%= @tournament.description %>
			</p>
		</section>
		
		<section>
			<h2>
				<strong>Where?</strong>
			</h2>
			<p>
				<%= @tournament.golf_course.name %>
			</p>
			<p>
				<%= @tournament.golf_course.location %>
			</p>
		</section>
			
		<section>
			<h2>
				<strong>When?</strong>
			</h2>
			<p>
				<%= t_date = @tournament.date.to_date %>
			</p>
			<p>
				<% c_date = Time.now.to_date %>
				<% days_away = (t_date - c_date).to_i %>
				
				<% if (days_away > 0) %>
					That's in <%= days_away %> days!
				<% elsif (days_away == 0) %>
					That's today!
				<% else %>
					This tounrament is over!
				<% end %>
			</p>
		</section>
		
		<p>
			<td><%= link_to 'Back', tournaments_path %></td>
		</p>
	</body>
</html>
