<html>
	<head>
		<title> <%= @tournament.name %> </title>
	</head>
	<body>
		<section>
			<h1>
				<%= @tournament.name %>
			</h1>
			<p>
				<%= @tournament.description %>
			</p>
		</section>
		
		<%= image_tag @tournament.image.url %>
		
		<section>
			<h2>
				<strong>Where?</strong>
			</h2>
			<p>
				<%= @tournament.golf_course.name %>
			</p>
			<p>
				<%= @tournament.golf_course.address.streetNumber %> <%= @tournament.golf_course.address.streetName %>
				</br>
				<%= @tournament.golf_course.address.city %>, <%= @tournament.golf_course.address.province %>, <%= @tournament.golf_course.address.country %>
				</br>
				<%= @tournament.golf_course.address.postalCode %>
			</p>
		</section>
			
		<section>
			<h2>
				<strong>When?</strong>
			</h2>
			<p>
				<%= t_date = @tournament.date.to_date %>
			</p>
			<p>
				<% c_date = Time.now.to_date %>
				<% days_away = (t_date - c_date).to_i %>
				
				<% if (days_away > 0) %>
					That's in <%= days_away %> days!
				<% elsif (days_away == 0) %>
					That's today!
				<% else %>
					This tournament is over.
				<% end %>
			</p>
		</section>

		<section>
			<h2>
				<strong>Current Teams</strong>
			</h2>
			<table>
				<th>Team Name</th>
				<th>Player 1</th>
				<th>Player 2</th>
				<th>Player 3</th>
				<th>Player 4</th>
				<th colspan="5"></th>
				
				<% @tournament.teams.each do |team| %>
					<tr>
						<td><%= team.name %></td>
						<td><%= team.p1.person.firstname %>, <%= team.p1.person.lastname %></td>
						<td><%= team.p2.person.firstname %>, <%= team.p2.person.lastname %></td>
						<td><%= team.p3.person.firstname %>, <%= team.p3.person.lastname %></td>
						<td><%= team.p4.person.firstname %>, <%= team.p4.person.lastname %></td>
					</tr>
				<% end %>
			</table>
		</section>
		
		<section>
			<% status = tournament_status(@tournament) %>
			<% if not status%>
				<p><%= link_to "Sponsor/Register for this tournament", new_ticket_path %></p>
			<% else %>
				<p>You are currently registered for this tournament as <%= get_tickettype_name(status) %></p>
			<% end %>
		</section>
		
		<section>
			<p>
				<td><%= link_to "Back to all Tournaments", tournaments_path %></td>
			</p>
		</section>
	</body>
</html>
