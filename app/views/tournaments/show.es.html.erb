<html>
	<head>
		<title> <%= @tournament.name %> </title>
	</head>
	<body>
		<%= render partial: "tournaments/tournament_info" %>

		<section>
			<h2>
				<strong>Equipos actuales</strong>
			</h2>
			<%@teams = @tournament.teams%>
			<%if (@teams !=nil)%>
				 El torneo no tiene un equipo 
			<%else%>
				<table>
					<th>Nombre del equipo</th>
					<th><%=t ("Player")%> 1</th>
					<th><%=t ("Player")%> 2</th>
					<th><%=t ("Player")%> 3</th>
					<th><%=t ("Player")%> 4</th>
					<th colspan="5"></th>
					
					<% @teams.each do |team| %>
						<tr>
							<td><%= team.team_num.to_s %></td>
							<td><%= team.p1.person.firstname %>, <%= team.p1.person.lastname %></td>
							<td><%= team.p2.person.firstname %>, <%= team.p2.person.lastname %></td>
							<td><%= team.p3.person.firstname %>, <%= team.p3.person.lastname %></td>
							<td><%= team.p4.person.firstname %>, <%= team.p4.person.lastname %></td>
						</tr>
					<% end %>
				</table>
			<% end %>
		</section>
		
		<section>
			<br>
			<h2>Patrocinadores del Torneo</h2>
			<% Sponsor.where(tournament_id: @tournament.id).find_each do |s| %>
				<%= render partial: "sponsors/show_brief", locals: {sponsor: s} %> 
			<% end %>
		</section>
		
		<section>
			<% status = tournament_status(@tournament) %>
			<br>
			<% if not status%>
				<p><%= link_to "Patrocinador / Regístrese para este torneo", new_ticket_path %></p>
			<% else %>
				<p>Actualmente estás registrado para este torneo como <%= get_tickettype_name(status) %></p>
				<% if status == 4 %> <!tournament organizer>
					<%= link_to "Administrar torneo", controller: "tournaments", action: "dashboard" %> 
				<% end %>
			<% end %>
		</section>
		
		<section>
			<p>
				<td><%= link_to "Volver a todos los torneos", tournaments_path %></td>
			</p>
		</section>
	</body>
</html>
