<%= render partial: "tournaments/dashboard_header" %>

<table class="table">

	<tr>
		<th><%= sort(t("first_name")) %> </th>
		<th><%= sort(t("last_name")) %></th>
		<th><%= sort(t("Telephone")) %></th>
	</tr>
	
	<% if @players.empty? %>
		<p>There are no players for this tournament</p>
	<% end %>
	
	<% @players.each do |p| %>
		<tr>
			<td><%= p.firstname %></td>
			<td><%= p.lastname %></td>
			<td><%= p.phone %></td>
		</tr>
	<% end %>

</table>

<%= link_to "Back to Tournament Dashboard", dashboard_path(@tournament) %>