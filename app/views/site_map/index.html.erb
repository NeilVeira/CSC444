      <div class="col-md-3">
        <ul>
          <li><%= link_to "New Tournaments", new_tournament_path %></li>
        </ul>
      </div>
      <div class="col-md-3">
        <ul>
         <li> <%=link_to 'User Tourney', controller: "people", action: "user_tourney" %></li>
         <li><%=link_to 'Tournament Tickets', controller: "people", action: "user_ticket" %> </li>
        </ul>
      </div>
      <% end %>
    </div>
  </section>
  <section class="sitemap" id="sec3">

    <h2>Golf Courses</h2>
    <div class="row">
      <div class="col-md-3">
        <ul>
          <li><%=link_to 'Golf Courses', controller: "golf_courses", action: "index" %></li>
        </ul>
      </div>
      <% if user_signed_in? %>
      <div class="col-md-3">
        <ul>
          <li><%=link_to 'Register Golf Course', new_golf_course_path%></li>
      </div>
      <% end %>
