  <section class="sitemap" id="sec1">

    <h2>Administration</h2>
    <div class="row">
      <div class="col-md-3">
        <ul>
          <li><a href="/">Home</a></li>
          <li><%= link_to 'Our Story', controller: "/story", action: "index" %></li>
          <li><%= link_to 'Partners', controller: "/partner", action: "index" %></li>
          <li><%= link_to 'FAQ', controller: "/faq", action: "index" %></li>
        </ul>
      </div>
      <div class="col-md-3">
        <ul>
          <li><%= link_to 'Features', controller: "/feature", action: "index" %></li>
          <li><%= link_to 'My Account', controller: "people", action: "portal" %></li>
          <li><%= link_to 'Login', new_user_session_path %></li>
          <li><%=link_to 'Sign Up', new_user_registration_path %></li>
        </ul>
      </div>
      <div class="col-md-3">
        <ul>
          <li><%= link_to 'Terms of Service', controller: "/serviceterm", action: "index" %></li>
          <li><%= link_to 'Privacy Info', controller: "/privacy", action: "index" %></li>
