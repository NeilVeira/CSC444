<%= render partial: "application/user_header" %>
<%= link_to 'Home', controller: 'home_page' %>
<table>
  <tr>
    <th>id</th>
    <th>person_id</th>
    <th>tournament_id</th>
  </tr>

  <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.id %></td>
        <td><%= sponsor.person_id %></td>
        <td><%= sponsor.tournament_id %></td>
        <td><%= link_to 'Sponsor Profile', sponsor_path(sponsor) %></td>
        <td><%= link_to 'Person Profile', person_path(sponsor.person_id) %></td>
        <td><%= link_to 'Delete', sponsor_path(sponsor),
                        method: :delete,
                        data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <%end%>
</table>
<%= link_to 'Create Sponsor', new_sponsor_path %>