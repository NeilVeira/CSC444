<h1><%=t :Registered_Users %></h1>
<br>
<br>
<table>
	<tr>
		<th><%=t :first_name %></th>
		<th><%=t :last_name %></th>
		<th>Email</th>
	</tr>
	
	<% @people.each do |person| %>
		<tr>
			<td><%= person.firstname %></td>
			<td><%= person.lastname %></td>
            <!-- this shouldn't be necessary once we update the db to add users to all people -->
			<% if person.user %>
                <td><%= person.user.email %></td> 
            <% else %>
                <td><%= t("invalid_user") %></td>
            <% end %>
			<td><%= link_to t('Profile'), person_path(person) %></td>
			<td><%= link_to t('Delete'), person_path(person),
							method: :delete,
							data: {confirm: t('Are_you_sure')} %></td>
		</tr>
	<%end%>
</table>
<br>
<%= link_to t('home'), controller: 'home_page' %>