<%
 @ticket = Ticket.where(id: params[:id]).first
  unless @ticket
    render tournaments_path
  end
%>

<%
 @_price = 0
 case @ticket.tickettype
	when 1
		@_price = @ticket.tournament.pricePlayer
	when 2
		@_price = @ticket.tournament.priceSponsor
	when 3
		@_price = @ticket.tournament.priceSpectator
  end
  if not @_price
	@_price = 0
  end
%>
<strong><h3><%= "Ticket price is: $"  + @_price.to_s %></h3></strong>

<br>
<%= link_to "Proceed with credit card", payment_path(@ticket.id, @person.id)%>
<strong><%= "  |  "%></strong>
<%= link_to "Proceed with PayPal",  @ticket.paypal_url(tournaments_path, @ticket.id, @ticket.tournament.pricePlayer), target: '_blank'%>
<br>
<br>
<%= link_to 'Back', controller: 'home_page' %>