<table> 
	<tr>
		<th>Ticket Type</th>
		<th>Tournament</th> 
		<th>Link</th>
	</tr>

	<% type = ['Player', 'Sponser', 'Spectator', 'Tournament Organizer'] %>

	<% tickets.each do |t| %>
		<% tournament = Tournament.find_by(id: t.tournament_id) %>
		<tr>
			<th><%= type[t.tickettype - 1] %></th>
			<th><%= tournament.name %></th>
			<th><%= link_to "Link", tournament_path(tournament) %></th>
		</tr>	
	<% end %>
</table>
