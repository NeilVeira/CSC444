<%
  @ticket = Ticket.where(id: params[:id]).first
  unless @ticket
    render tournaments_path
  end

  cc = CreditCard.where(person_id: current_person.id)
  %>
<h1>Payment for tournament <%= @ticket.tournament.name %></h1>

  <%= render partial: "credit_cards/credit_cards_table_pay", locals: {ticket: @ticket, credit_cards: cc} %>
  <br>
  <b> Pay with new card </b><br>
  <%=
    render partial: "credit_cards/new_card", locals: {ticket_id: @ticket.id, direct_page: 1, return_page: 2} %>
<br>

<%= link_to 'Back', controller: 'home_page' %>
