<html>
<br>
<br>
	<h1>Registered Teams</h1>

	<section>
		<table>
			<th>Tournament</th>
			<th><%=t :Show %></th>
			<th><%=t :Delete %> Team</th>
			<th colspan="4"></th>
			
			<% @teams.each do |team| %>
				<tr>
					<td><%= team.tournament.name %></td>
					<td><%= link_to t("Show"), team_path(team) %></td>
					<td><%= link_to t("Delete"), team_path(team), method: :delete, data: {confirm: "Delete team?"} %></td>
				</tr>
			<% end %>
		</table>		
	</section>
	<br>
	<%= link_to t("home"), controller:"home_page"%>
</html>
